<div class="container">
  <div class="rows">
    <div class="col-xs-12">
      <h1 class="text-center home_title">Liste des cocktails</h1>
    </div>
  </div>
  <br><br>
  <% @cocktails.each do |cocktail| %>
  <div class="rows">
    <div class="col-xs-12">
      <div class="cocktails_index_images">
        <div class="nom_cocktail">
          <%= link_to cocktail_path(cocktail) do %>
            <h2><%= cocktail.name.capitalize %>: </h2>
          <% end%>
        </div>
        <div class="photo_cocktail">
          <% if cocktail.photo? %>
            <%= cl_image_tag(cocktail.photo.path, { size: '100x100', crop: :thumb, gravity: :face, class: "img-small" }) %>
          <% end %>
        </div>
      </div>
    </div>
    <br><br>
  </div>
  <% end%>
  <div class="rows">
    <div class="col-xs-12 text-center">
      <br><br>
      <%= link_to "Create new cocktail", new_cocktail_path, class: "btn btn-treehouse_sec bottom_page" %>
    </div>
  </div>
</div>
